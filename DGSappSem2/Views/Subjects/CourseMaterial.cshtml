@model IEnumerable<AssessmentBusiness.Subject>

@{ ViewBag.Title = "Course_Material"; }

<h2>Course Materials</h2>

<form asp-action="Index" method="get">
  <div class="form-actions no-color">
    <p>
      Find by Grade: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
      <input type="submit" value="Search" class="btn btn-default" />
      
    </p>
  </div>
</form>
<p >
  @Html.ActionLink("Back to Full list", "CourseMaterial", "Subjects")
</p>
<table class="table">
  <tr>
    <th>
      @Html.DisplayNameFor(model => model.ClassRoom.GradeName)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.SubjectName)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.Upload)
    </th>
    <th></th>
  </tr>

  @foreach (var item in Model)
  {
<tr>
  <td>
    @Html.DisplayFor(modelItem => item.ClassRoom.GradeName)
  </td>
  <td>
    @Html.DisplayFor(modelItem => item.SubjectName)
  </td>
  <td>
    <a href="~/Content/@item.Upload">@Html.DisplayFor(modelItem => item.Upload)</a>
  </td>

</tr>
}

</table>
<p>
  @Html.ActionLink("Create New", "Create")
</p>